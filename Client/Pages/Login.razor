@page "/login"
<div class="container h-100">
    <div class=" d-flex justify-content-center h-100">
        <div class="card col-lg-5 mt-md-5 p-3 shadow-lg bg-info">
            <div class="d-flex justify-content-center mb-2">
                <div class="brand_logo_container">
                    <img class="rounded-circle" src="/Images/tempLogo.jpg" />
                </div>
            </div>
            <div class="d-flex justify-content-center ">
                <form>
                    <div class="input-group mb-3">
                        <div class="input-group-append ">
                            <span class="input-group-text h-100"><i class="oi oi-account-login "></i></span>
                        </div>
                        <input type="text" name="" class="form-control m-0" value="" placeholder="Nombre de Usuario o Email">
                    </div>

                    <div class="input-group mb-2">
                        <div class="input-group-append">
                            <span class="input-group-text h-100"><i class="oi oi-double-quote-serif-right"></i></span>
                        </div>
                        <input type="password" name="" class="form-control " value="" placeholder="Contraseña">
                    </div>

                    <div class="form-group">
                        <div class="custom-control custom-checkbox">
                            <input type="checkbox">
                            <label class="custom-control-label" for="customControlInline">Recordarme</label>
                        </div>
                    </div>
                    <div class="d-flex justify-content-center mt-3">
                        <button type="button" name="button" class="btn btn-success">Login</button>
                    </div>
                </form>
            </div>
            <div class="mt-4 d-flex justify-content-center">
                <a href="/register">Registrarse como nuevo usuario</a>
            </div>
        </div>
    </div>
</div>
