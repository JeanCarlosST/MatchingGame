@page "/userprofile"
@page "/userprofile/{UsuarioId:int}"

<div class="container">

    <div class="row d-flex justify-content-center">

        <div class="col-lg-6 mt-md-4 ">
            <div class="card shadow-lg bg-info bg-gradient border-1 border-dark ">
                <div class="card-header border-1 bg-transparent">
                    <div class="d-flex flex-column text-center my-2">
                        <span class="fs-4 mt-2">
                            <b>Perfil</b>
                        </span>
                    </div>
                </div>

                <div class="d-flex justify-content-center m-2 ">
                    <EditForm Model="Usuario" OnValidSubmit="Guardar">
                        <DataAnnotationsValidator />
                        <form>
                            <div class="input-group mb-3 ">
                                <span class="input-group-text"><i class="oi oi-person"></i></span>
                                <InputText @bind-Value="Usuario.Nombres" class="form-control m-0" placeholder="Nombres" disabled />
                                @if (!esAmigo())
                                {
                                    <button type="button" class="btn btn-primary small">
                                        +
                                    </button>
                                }
                            </div>
                            <div class="input-group mb-3">
                                <span class="input-group-text"><i class="oi oi-envelope-closed"></i></span>
                                <InputText @bind-Value="Usuario.Email" class="form-control m-0" placeholder="Correo Electrónico" disabled />
                            </div>
                            <div class="input-group mb-3">
                                <span class="input-group-text"><i class="oi oi-shield"></i></span>
                                <InputText @bind-Value="Usuario.NickName" class="form-control m-0" placeholder="Nombre de usuario" disabled />
                            </div>
                            <div class="row mb-3">
                                <div class="col">
                                    <span class="input-group-text justify-content-center">
                                        Victorias 1vs1:
                                    </span>
                                    <span class="input-group-text justify-content-center">
                                        @Usuario.Victorias1v1
                                    </span>
                                </div>

                                <div class="col ">
                                    <span class="input-group-text justify-content-center">
                                        Victorias Torneos:
                                    </span>
                                    <span class="input-group-text justify-content-center">
                                        @Usuario.VictoriasTorneos
                                    </span>
                                </div>
                            </div>
                        </form>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
</div>
@code {
    [Parameter]
    public int UsuarioId { get; set; }

    public Pages.Profile.MyProfile.tempUser Usuario = new Pages.Profile.MyProfile.tempUser();

    protected override void OnInitialized()
    {
        Usuario = Pages.Profile.MyProfile.Users[UsuarioId - 1];
        Nuevo();

    }
    private bool esPendiente()
    {
        return Pages.Profile.MyProfile.Users[0].Solicitudes.Exists(p => p.id == UsuarioId);
    }
    private bool esAmigo()
    {

        ////
        return Pages.Profile.MyProfile.Users[0].ListaAmigos.Exists(p => p.id == UsuarioId);
    }
    private void Nuevo()
    {
    }

    private void Guardar()
    {
        ///Hazlo que guarde papá
    }
}
